<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.splash_screen.MainActivity"
    android:background="#353d46">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AD-TuTo"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="32dp"
        android:textSize="70dp"
        android:textStyle="italic|bold"
        android:typeface="monospace"
        android:textAllCaps="true"
        android:layout_marginTop="180dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.pc.projet_complet.Splash_screen"
        android:background="#353d46"
        android:visibility="visible"
        android:id="@+id/authentication"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/Name"
            android:hint="Username"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_username"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="#212026"
            android:layout_marginTop="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_in"
            android:background="#212026"
            android:layout_below="@+id/Name"
            android:layout_marginTop="20dp"
            android:drawablePadding="2dp"
            android:drawableLeft="@drawable/ic_password"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:hint="Password"
            android:textColorHint="#FFFFFF"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/Login"
            android:layout_below="@+id/password_in"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#7CC3FF"
            android:onClick="user_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Forgot password ?"
            android:id="@+id/Forgot_password"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/Login"
            android:layout_centerHorizontal="true"
            android:textColor="#5E768B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Don&apos;t have an account yet ?"
            android:id="@+id/textView2"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/Sign_up"
            android:layout_toStartOf="@+id/Sign_up"
            android:layout_marginBottom="45dp"
            android:textColor="#5E768B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Sign Up"
            android:id="@+id/Sign_up"

            android:layout_alignTop="@+id/textView2"
            android:layout_toRightOf="@+id/Forgot_password"
            android:layout_toEndOf="@+id/Forgot_password"
            android:textColor="#7CC3FF"
            android:onClick="SIGN" />

    </RelativeLayout>


</RelativeLayout>
